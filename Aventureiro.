    float Area3 = 1200.33;                                                                                                                            // Área: 693,8 km², 1.521,20 km², 1.200,33 km², 331,4 km²
    float Area4 = 331.4;                                                                                                                            // PIB: 62.95 bilhões, 748.0 bilhões, 359.64 bilhões, 105.82 bilhões
    float PIB1 = 62.95;
    float PIB2 = 748.0;
    float PIB3 = 359.64;                                                                                                                                  // PIB: 62.95 bilhões, 748.0 bilhões, 359.64 bilhões, 105.82 bilhões  
